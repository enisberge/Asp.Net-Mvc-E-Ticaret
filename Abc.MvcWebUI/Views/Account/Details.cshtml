@using Abc.MvcWebUI.Entity
@using Abc.MvcWebUI.Models
@model OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Detay Bilgileri</h2>
            <hr />
            <dl class="row">
                
                <dt class="col-sm-3">Order State</dt>
                <dd class="col-sm-9">
                    @if (@Model.OrderState == EnumOrderState.Waiting)
                    {
                        <span class="badge-danger">Onay Bekliyor</span>
                    }
                    else if (@Model.OrderState == EnumOrderState.Completed)
                    {
                        <span class="badge-success">Sipariş Tamamlandı</span>
                    }
                </dd>

                <dt class="col-sm-3">Order Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">@Model.Total.ToString("c")</dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>



                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">
                    @Model.AdresBasligi
                    <hr />
                    @Model.Adres
                    <br />
                    @Model.Sehir - @Model.Semt - @Model.Mahalle
                    <br />
                    @Model.PostaKodu
                </dd>

                <dt class="col-sm-3">Products</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th width="120">Price</th>
                                <th width="150"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderLines)
                            {
                                <tr>
                                    <td>
                                        <img src="/Upload/@item.Image" />
                                    </td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price.ToString("c")</td>
                                    <td>
                                        <a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank"><i class="fas fa-chevron-right"></i> Product Details</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4"></td>
                                <td>@Model.Total.ToString("c")</td>
                            </tr>
                        </tfoot>
                    </table>
                </dd>


            </dl>

        </div>
    </div>
</div>


